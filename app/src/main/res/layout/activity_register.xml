<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fbfbfb">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@android:color/white"
        android:elevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="用户注册"
                android:textColor="@color/gray_333"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_ebebeb" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="注册信息"
                    android:textColor="@color/blue1"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_1"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_circle_blue" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/tv_1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_toLeftOf="@+id/iv_2"
                    android:layout_toRightOf="@+id/iv_1"
                    android:background="@color/gray_ebebeb" />

                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="验证信息"
                    android:textColor="@color/gray_666"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_circle_gray" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/tv_1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_toLeftOf="@+id/iv_3"
                    android:layout_toRightOf="@+id/iv_2"
                    android:background="@color/gray_ebebeb" />

                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:text="注册成功"
                    android:textColor="@color/gray_666"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_3"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_circle_gray" />

            </RelativeLayout>

            <!--步骤1的布局-->
            <LinearLayout
                android:id="@+id/ll_step1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="40dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/et_name"
                        android:gravity="right"
                        android:text="账号"
                        android:textColor="@color/gray_666"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/seclect_edittext_bg_question"
                        android:hint="请输入用户名"
                        android:paddingLeft="10dp"
                        android:textColor="@color/blue1"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/et_pwd"
                        android:gravity="right"
                        android:text="密码"
                        android:textColor="@color/gray_666"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/seclect_edittext_bg_question"
                        android:hint="请输入密码"
                        android:paddingLeft="10dp"
                        android:textColor="@color/blue1"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/et_crop"
                        android:text="项目组"
                        android:gravity="right"
                        android:textColor="@color/gray_666"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_crop"
                        android:layout_width="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_height="40dp"
                        android:background="@drawable/seclect_edittext_bg_question"
                        android:hint="请输入所在项目组"
                        android:paddingLeft="10dp"
                        android:textColor="@color/blue1"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_next"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="50dp"
                    android:background="@drawable/shape_btn_question"
                    android:gravity="center"
                    android:text="下一步"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />


            </LinearLayout>

            <!--步骤2的布局-->
            <LinearLayout
                android:id="@+id/ll_step2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="请输入验证问题，用于找回密码"
                        android:textColor="@color/blue1" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_question1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="30dp"
                        android:text="问题1：你的名字是？"
                        android:textColor="@color/gray_666"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_answer1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/seclect_edittext_bg_question"
                        android:hint="请输入答案"
                        android:paddingLeft="10dp"
                        android:textColor="@color/blue1"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_question2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="40dp"
                        android:text="问题2：所属单位名称？"
                        android:textColor="@color/gray_666"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_answer2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/seclect_edittext_bg_question"
                        android:hint="请输入答案"
                        android:paddingLeft="10dp"
                        android:textColor="@color/blue1"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_question3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="40dp"
                        android:text="问题3：您的手机号码是多少？"
                        android:textColor="@color/gray_666"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_answer3"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/seclect_edittext_bg_question"
                        android:hint="请输入答案"
                        android:paddingLeft="10dp"
                        android:textColor="@color/blue1"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_register"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="50dp"
                        android:background="@drawable/shape_btn_question"
                        android:gravity="center"
                        android:text="注册"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" />
                    </LinearLayout>
                </ScrollView>


            </LinearLayout>

            <!--步骤3的布局-->
            <LinearLayout
                android:id="@+id/ll_step3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <RelativeLayout
                        android:id="@+id/rl_ok"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/shape_btn_question">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/gou" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl_ok"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:text="注册成功"
                        android:textColor="@color/blue_26b0b2"
                        android:textSize="18sp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_register_ok"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/seclect_btn_ok"
                    android:gravity="center"
                    android:text="完成"
                    android:textColor="@color/seclect_texttext_ok"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>