<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingLeft="0dp">
    <!--        计量箱缺陷        -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="5dp"
            android:layout_height="12dp"
            android:layout_marginLeft="5dp"
            android:background="@color/main_green_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="计量箱缺陷："
            android:textColor="@color/gray_333"
            android:textSize="13sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroup_qx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/qx_dj_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:button="@null"
                android:checked="true"
                android:drawableLeft="@drawable/radiobutton_bg"
                android:drawablePadding="10dp"
                android:gravity="center_horizontal"
                android:text="无"
                android:textColor="#333333" />

            <RadioButton
                android:id="@+id/qx_dj_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:button="@null"
                android:drawableLeft="@drawable/radiobutton_bg"
                android:drawablePadding="10dp"
                android:gravity="center_horizontal"
                android:text="Ⅰ级"
                android:textColor="#333333" />

            <RadioButton
                android:id="@+id/qx_dj_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:button="@null"
                android:drawableLeft="@drawable/radiobutton_bg"
                android:drawablePadding="10dp"
                android:gravity="center_horizontal"
                android:text="Ⅱ级"
                android:textColor="#333333" />

            <RadioButton
                android:id="@+id/qx_dj_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:button="@null"
                android:drawableLeft="@drawable/radiobutton_bg"
                android:drawablePadding="10dp"
                android:gravity="center_horizontal"
                android:text="Ⅲ级"
                android:textColor="#333333" />

        </RadioGroup>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#F3F3F3" />
    <LinearLayout
        android:id="@+id/ll_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    </LinearLayout>

    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="gone"
        android:paddingLeft="13dp"
        android:paddingTop="7dp"
        android:paddingRight="@dimen/text_size_13"
        android:paddingBottom="7dp"
        android:text="无"
        tools:text="@string/qx_first"
        android:textColor="@color/gray_333"
        android:textSize="13sp" />

</LinearLayout>